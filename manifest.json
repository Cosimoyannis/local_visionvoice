{
  "manifest_version": 3,
  "name": "local extension from VisionVoice Screenreader",
  "version": "1.0",
  "description": "A Chrome extension to capture a screenshot and analyze it using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "32": "Logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
       "suggested_key": {
          "chromeos": "Alt+S",
          "linux": "Alt+S",
          "mac": "Alt+S",
          "windows": "Alt+S"
       }
    }
 }
}
